
!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi: 96
Xft.antialias: false
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight

URxvt.depth: 32
URxvt.geometry: 90x30
URxvt.fading: true
URxvt.urgentOnBell: true
!URxvt.visualBell: true
URxvt.loginShell: true
URxvt.saveLines: 4096
URxvt.internalBorder: 0
URxvt.lineSpace: 1

URxvt*termName: rxvt

! Fonts
URxvt.allow_bold: false
URxvt*font: xft:DejaVu Sans Mono for Powerline:pixelsize=14
URxvt*boldFont: xft:Dejavu Sans Mono for Powerline:pixelsize=14

! Fix font space
URxvt*letterSpace: -1

! Cursor
URxvt.cursorBlink: true
URxvt.cursorUnderline: false

! Pointer
URxvt.pointerBlank: true

!!*fading: 40
*fadeColor: #393939
*pointerColorBackground: #e0e0e0
*pointerColorForeground: #e9e9e9

! Scrollbar
URxvt.scrollStyle: rxvt
URxvt.scrollBar: false

! Perl extensions
URxvt.perl-ext-common: default,url-select,clipboard
URxvt.matcher.button: 1
URxvt.url-select.launcher: /home/kalman/misc/firefox/firefox
URxvt.urlLauncher: /home/kalman/misc/firefox/firefox

!! custom stuff
URxvt.keysym.4-C-u: perl:url-select:select_next

URxvt.keysym.4-c:   perl:clipboard:copy
URxvt.keysym.4-v:   perl:clipboard:paste
URxvt.keysym.4-C-v: perl:clipboard:paste_escaped

! special
*.foreground:   #f1ebeb
*.background:   #272822
*.cursorColor:  #f1ebeb

! black
*.color0:       #48483e
*.color8:       #76715e

! red
